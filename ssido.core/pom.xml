    <properties>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
        
        <guava.version>30.1.1-jre</guava.version>
        <apache.httpclient.version>4.5.13</apache.httpclient.version>
